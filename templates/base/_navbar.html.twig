<script>
// On attend que le DOM soit entiÃ¨rement chargÃ©
document.addEventListener('DOMContentLoaded', () => {
    // On sÃ©lectionne le bouton qui ouvre/ferme le menu mobile
    const menuButton = document.querySelector('[aria-controls="mobile-menu"]');
    const mobileMenu = document.getElementById('mobile-menu');

    // On vÃ©rifie que les Ã©lÃ©ments existent bien
    if (menuButton && mobileMenu) {
        // On Ã©coute l'Ã©vÃ©nement 'click' sur le bouton
        menuButton.addEventListener('click', () => {
            // On ajoute ou on retire la classe 'hidden' du menu mobile
            // pour le montrer ou le cacher
            mobileMenu.classList.toggle('hidden');

            // Change l'aria-expanded en fonction de l'Ã©tat du menu
            const expanded = menuButton.getAttribute('aria-expanded') === 'true' || false;
            menuButton.setAttribute('aria-expanded', !expanded);
        });
    }
});

</script>
