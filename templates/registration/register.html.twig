{% extends 'base.html.twig' %}

{% block title %}S'inscrire à Rolepl.ai{% endblock %}

{% block body %}

<section class="pt-16">
  <div class="lg:grid  lg:grid-cols-12">
    <section class="flex h-32 items-end  lg:col-span-5 lg:h-full xl:col-span-6">
      <div class="flex md:flex-col flex-col-reverse items-center justify-center h-full w-full">
        <p class="text-g-violet sm:text-2xl xl:text-3xl sm:pb-6 xl:py-4">
          Essayez gratuitement!
        </p>
        
        <div class="candle scale-50 md:scale-100">
          <div class="candle-flame"></div>
          <div class="candle-wick"></div>
          <div class="candle-wax"></div>
          <div class="candle-stand"></div>
        </div>

        <p class="text-g-violet sm:text-l xl:text-xl xl:py-1">
          Découvrez le monde du roleplay boosté par l'IA.
        </p>
      </div>
    </section>

    <main class="flex items-center justify-center px-8 py-8 sm:px-12 lg:col-span-7 lg:px-16 lg:py-12 xl:col-span-6">
      <div class="max-w-xl lg:max-w-3xl">
          {{ form_start(registrationForm)}}
          {% for flash_error in app.flashes('verify_email_error') %}
          <div class="col-span-6 alert alert-danger" role="alert">
            {{ flash_error }}
          </div>
          {% endfor %}
          {{ form_errors(registrationForm) }}
          <div class="col-span-6">
            {{ form_row(registrationForm.email, {
              attr: {'class': 'p-2 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-g-light-blue focus:ring focus:ring-g-light-blue focus:ring-opacity-50'},
              label_attr: {'class': 'mt-2 block text-sm font-medium text-g-violet'},
            }) }}
          </div>

          <div class="col-span-6 sm:col-span-3">
            {{ form_row(registrationForm.plainPassword.first, {
              label: 'Password',
              type: 'password',
              attr: {'class': 'p-2 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-g-light-blue focus:ring focus:ring-g-light-blue focus:ring-opacity-50'},
              label_attr: {'class': 'mt-2 block text-sm font-medium text-g-violet'},
            }) }}
          </div>
          

          <div class="col-span-6 sm:col-span-3">
            {{ form_row(registrationForm.plainPassword.second, {
              label: 'Confirm Password',
              type: 'password',
              attr: {'class': 'p-2 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-g-light-blue focus:ring focus:ring-g-light-blue focus:ring-opacity-50'},
              label_attr: {'class': 'mt-2 block text-sm font-medium text-g-violet'},
            }) }}
          </div>

          <div class="col-span-6 flex items-center">
            {{ form_widget(registrationForm.agreeTerms, {
                'attr': {'class': 'my-2 h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded'}
            }) }}
            {{ form_label(registrationForm.agreeTerms, 'Agree to terms', {
                'label_attr': {'class': 'my-2 p-1 ml-2 block text-sm text-g-violet'}
            }) }}
            {{ form_errors(registrationForm.agreeTerms) }}
          </div>


          <div class="col-span-6">
            <button type="submit" class="inline-block shrink-0 rounded-md  bg-g-light-blue hover:bg-g-light-blue-hovered px-12 py-3 text-sm font-medium text-white transition ">
              Register
            </button>
          </div>
      </div>
    </main>
  </div>
    {{ form_end(registrationForm)}}
</section>
{% endblock %}
